<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="horizontal" android:background="#0A0E27">

    <!-- Sidebar -->
    <LinearLayout android:layout_width="280dp" android:layout_height="match_parent" android:orientation="vertical" android:background="#0F1326" android:padding="16dp">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="NotiFlow" android:textSize="20sp" android:textColor="@android:color/white" android:textStyle="bold" android:layout_marginBottom="32dp" />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SYSTEM" android:textSize="12sp" android:textColor="#6B7280" android:textStyle="bold" android:layout_marginBottom="12dp" />

        <!-- Navigation buttons -->
        <Button android:id="@+id/btn_inbox" android:layout_width="match_parent" android:layout_height="48dp" android:text="Smart Inbox" android:layout_marginBottom="8dp" android:textColor="#00B4FF" android:backgroundTint="#1E3A8A" />

        <Button android:id="@+id/btn_rules" android:layout_width="match_parent" android:layout_height="48dp" android:text="Rule Engine" android:layout_marginBottom="8dp" android:textColor="#9CA3AF" />

        <Button android:id="@+id/btn_analytics" android:layout_width="match_parent" android:layout_height="48dp" android:text="Analytics" android:layout_marginBottom="8dp" android:textColor="#9CA3AF" />

        <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" />

        <!-- System Status -->
        <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/rounded_bg" android:padding="12dp">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="System Status" android:textSize="12sp" android:textColor="#9CA3AF" android:textStyle="bold" />

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Listening active" android:textSize="13sp" android:textColor="@android:color/white" android:layout_marginTop="8dp" />

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Battery: 84%" android:textSize="12sp" android:textColor="#9CA3AF" android:layout_marginTop="4dp" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <!-- Main Content Area -->
    <ScrollView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:padding="32dp">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Smart Inbox" android:textSize="32sp" android:textColor="@android:color/white" android:textStyle="bold" />

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Your attention is protected. 14 notifications auto-suppressed." android:textSize="14sp" android:textColor="#9CA3AF" android:layout_marginTop="8dp" android:layout_marginBottom="24dp" />

            <!-- Filter/Clear buttons -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="end" android:layout_marginBottom="24dp">

                <Button android:layout_width="wrap_content" android:layout_height="40dp" android:text="Clear All" android:textColor="@android:color/white" android:backgroundTint="#0096FF" />
            </LinearLayout>

            <!-- Tabs -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="24dp">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="All Stream" android:textSize="14sp" android:textColor="#00B4FF" android:layout_marginEnd="24dp" />

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Urgent" android:textSize="14sp" android:textColor="#6B7280" android:layout_marginEnd="24dp" />

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Important" android:textSize="14sp" android:textColor="#6B7280" android:layout_marginEnd="24dp" />

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Digest" android:textSize="14sp" android:textColor="#6B7280" android:layout_marginEnd="24dp" />

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Muted" android:textSize="14sp" android:textColor="#6B7280" />
            </LinearLayout>

            <!-- Notification Card Sample -->
            <FrameLayout android:layout_width="match_parent" android:layout_height="120dp" android:background="@drawable/card_bg" android:layout_marginBottom="16dp" android:padding="16dp">

                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="horizontal">

                    <FrameLayout android:layout_width="56dp" android:layout_height="56dp" android:background="@drawable/icon_bg">

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ’¬" android:textSize="28sp" android:layout_gravity="center" />
                    </FrameLayout>

                    <LinearLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="16dp">

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">

                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="WhatsApp" android:textSize="14sp" android:textColor="@android:color/white" android:textStyle="bold" />

                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" â€¢ 2 mins ago" android:textSize="12sp" android:textColor="#6B7280" android:layout_marginStart="4dp" />
                        </LinearLayout>

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Mom" android:textSize="12sp" android:textColor="#9CA3AF" android:layout_marginTop="4dp" />

                        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Are you coming for dinner tonight?" android:textSize="13sp" android:textColor="#9CA3AF" android:layout_marginTop="4dp" android:maxLines="1" android:ellipsize="end" />
                    </LinearLayout>

                    <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/badge_bg" android:padding="6dp" android:layout_marginStart="8dp">

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="VIP Contact" android:textSize="11sp" android:textColor="#9CA3AF" />
                    </FrameLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
